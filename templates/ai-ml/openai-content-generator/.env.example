# Example environment variables for OpenAI Content Generator
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Content Generation Settings
DEFAULT_TONE=professional
DEFAULT_WORD_COUNT=500
ENABLE_MODERATION=true
QUALITY_THRESHOLD=0.8

# SEO Configuration
ENABLE_SEO_OPTIMIZATION=true
DEFAULT_SEO_KEYWORDS=ai,automation,technology
META_DESCRIPTION_LENGTH=160

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=20
RETRY_ATTEMPTS=3
RETRY_DELAY=2000

# Output Configuration
DEFAULT_OUTPUT_FORMAT=markdown
INCLUDE_METADATA=true
SAVE_TO_FILE=false

# Cost Management
DAILY_TOKEN_LIMIT=50000
MONTHLY_BUDGET_USD=100
ENABLE_COST_ALERTS=true

# Debug Configuration
DEBUG_MODE=false
LOG_PROMPTS=false
LOG_RESPONSES=false

# Webhook Configuration (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your_webhook_secret

# Integration Settings (optional)
CMS_INTEGRATION=false
CMS_TYPE=wordpress
CMS_API_URL=https://your-cms.com/wp-json/wp/v2
CMS_API_KEY=your_cms_api_key
